
bindir=/usr/bin

/usr/sbin/update-alternatives \
  --install ${bindir}/vim vim ${bindir}/vim-nox.exe 10 \
  --slave   ${bindir}/view view ${bindir}/vim-nox.exe \
  --slave   ${bindir}/vimdiff vimdiff ${bindir}/vim-nox.exe \
  --slave   ${bindir}/rvim rvim ${bindir}/vim-nox.exe \
  --slave   ${bindir}/rview rview ${bindir}/vim-nox.exe

